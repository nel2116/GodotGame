# EditorConfig is awesome: https://EditorConfig.org

# ルート設定（プロジェクト全体に適用）
root = true

# 一般設定（全ファイルに適用）
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# スペースインデント（Godot & Python風）
indent_style = space
indent_size = 4

# Markdown ファイル（Obsidian連携用）
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# GDScript（.gd）ファイル
[*.gd]
indent_style = space
indent_size = 4

# JSON（Godot設定など）
[*.json]
indent_style = space
indent_size = 4

# C#（もし将来的に使う場合）
[*.cs]
indent_style = space
indent_size = 4
